# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Prisma
*.prisma text eol=lf

# Configuration
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.txt text eol=lf
*.md text eol=lf
LICENSE text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.docx binary
*.xlsx binary
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Video/Audio
*.mp4 binary
*.mov binary
*.avi binary
*.mp3 binary
*.wav binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.git export-ignore
*.log export-ignore
node_modules/ export-ignore
dist/ export-ignore
build/ export-ignore
coverage/ export-ignore
.env export-ignore
.env.* export-ignore
uploads/ export-ignore
